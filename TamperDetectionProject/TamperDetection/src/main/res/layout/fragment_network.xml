<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check self-signed certificate"
        android:id="@+id/network_self_signed_cert_button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check without"
        android:id="@+id/network_regular_button"
        android:layout_above="@+id/network_self_signed_cert_button"
        android:layout_centerHorizontal="true" />
</RelativeLayout>